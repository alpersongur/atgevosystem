rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.token.role != null;
    }

    function isActiveUser() {
      return request.auth.token.is_active == null ||
             request.auth.token.is_active == true;
    }

    function userRole() {
      return request.auth.token.role;
    }

    function hasAnyRole(allowedRoles) {
      return isSignedIn() &&
        isActiveUser() &&
        allowedRoles.hasAny((role) => role == userRole());
    }

    match /{document=**} {
      allow read: if hasAnyRole([
        'superadmin',
        'admin',
        'finance',
        'accounting',
        'purchasing',
        'production',
        'sales',
        'warehouse',
        'logistics'
      ]);

      allow write: if hasAnyRole(['superadmin', 'admin']);
    }
  }
}
