rules_version = '2';

service cloud.firestore {
  function isSuperAdmin() {
    return request.auth != null && request.auth.token.role == 'superadmin';
  }

  function userRole() {
    return request.auth != null
      ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
      : null;
  }

  function hasRole(roles) {
    return userRole() in roles;
  }

  function isDashboardRole() {
    return hasRole(['admin', 'superadmin']);
  }

  match /databases/{database}/documents {

    match /{document=**} {
      allow read, write, update, delete: if isSuperAdmin();
      allow read: if request.auth != null;
    }

    match /system_logs/{logId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }

    match /dashboard_snapshots/{snapshotId} {
      allow read: if request.auth != null && isDashboardRole();
      allow create, update, delete: if isSuperAdmin();
    }

    match /system_notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }

    match /system_metrics/{document=**} {
      allow read: if request.auth != null && hasRole(['admin', 'superadmin']);
      allow write: if false;
    }

    match /analytics/{docId} {
      allow read: if request.auth != null && hasRole(['admin', 'superadmin']);
      allow create, update, delete: if isSuperAdmin();
    }

    // permissions koleksiyonu sadece admin erişimine açık
    match /permissions/{module} {
      allow read, write, update, delete: if isSuperAdmin();
      allow read, update, create, delete: if
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /modules/{moduleId} {
      allow read, write, update, delete: if isSuperAdmin();
      allow read: if request.auth != null;
      allow write, update, delete: if
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["superadmin", "admin"];
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write, update, delete: if isSuperAdmin();
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write, update, delete: if isSuperAdmin();
    }

    match /system_modules/{moduleId} {
      allow read: if request.auth != null;
      allow write, update, delete: if isSuperAdmin();
    }

    match /system_settings/{docId} {
      allow read: if request.auth != null;
      allow write, update, delete: if isSuperAdmin();
    }

    match /invoices/{invoiceId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        hasRole(["superadmin", "admin", "accounting"]);
    }

    match /payments/{paymentId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        hasRole(["superadmin", "admin", "accounting"]);
    }
  }
}
